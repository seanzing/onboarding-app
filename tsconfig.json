{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-backup.tsx",
    "**/*-backup.ts",
    "**/*-old.tsx",
    "**/*-old.ts",
    "test-*.ts",
    "cleanup-*.ts",
    "complete-*.ts",
    "verify-*.ts",
    "create-*.ts",
    "delete-*.ts",
    "apply-*.ts",
    "audit-*.ts",
    "backfill-*.ts",
    "check-*.ts",
    "drop-*.ts",
    "fetch-*.ts",
    "final-*.ts",
    "fix-*.ts",
    "force-*.ts",
    "link-*.ts",
    "reload-*.ts",
    "revert-*.ts",
    "run-*.ts",
    "update-*.ts"
  ]
}
